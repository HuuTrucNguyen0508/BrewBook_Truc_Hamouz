# BrewBook Docker Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION (Local Postgres)
# =============================================================================
DATABASE_URL=postgresql://postgres:password@postgres:5432/brewbook
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=brewbook
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# =============================================================================
# VECTOR DATABASE (pgvector)
# =============================================================================
VECTOR_DIMENSION=1536

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=your-jwt-secret-here-min-32-chars
COOKIE_SECRET=your-cookie-secret-here-min-32-chars

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# WEB SCRAPING
# =============================================================================
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; BrewBook/1.0)
SCRAPER_TIMEOUT=30000
SCRAPER_RATE_LIMIT=1000

# =============================================================================
# AI GENERATION
# =============================================================================
AI_MODEL_NAME=gpt-4o
AI_EMBEDDING_MODEL=text-embedding-3-large
AI_IMAGE_MODEL=dall-e-3
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
RAG_TOP_K_RESULTS=5
RAG_MAX_GENERATED_RECIPES=3

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_MAX_SIZE=10485760
STORAGE_BUCKET=brewbook-assets

# =============================================================================
# MONITORING
# =============================================================================
ENABLE_LOGGING=true
LOG_LEVEL=info

# =============================================================================
# REDIS (Optional - for caching and rate limiting)
# =============================================================================
REDIS_PASSWORD=your-redis-password-here

# =============================================================================
# DOCKER SPECIFIC
# =============================================================================
DOCKER_IMAGE_NAME=brewbook
DOCKER_IMAGE_TAG=latest

# =============================================================================
# NGINX (Optional - for reverse proxy)
# =============================================================================
# SSL_CERT_PATH=./ssl/cert.pem
# SSL_KEY_PATH=./ssl/key.pem
